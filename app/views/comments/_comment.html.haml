.comment[comment]
  = link_to comment.user, class: "pull-left" do
    = image_tag comment.user_avatar(30), class: "avatar"
  .comment_body
    %h5.media-heading
      = link_to comment.user_name, comment.user
      %small
        = "#{time_ago_in_words(comment.created_at)} ago - "
        = link_to comment do
          %span.glyphicon.glyphicon-link
          = comment.id
    .comment_content
      %p= markdown(comment.content)
    .comment_photos
      = render comment.photos
    .comment_actions
      = render "shared/actions", lovable: comment

