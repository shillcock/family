- if comment
  .comment[comment]
    = link_to comment.user, class: "pull-left" do
      = user_avatar_tag(comment.user, 30)
    .comment_body
      %h5.media-heading
        = comment.user.first_name
        %small
          = link_to "replied", comment, title: comment.created_at.strftime("%A, %B %Y  @ %l:%M %p")
          = "#{time_ago_in_words(comment.created_at)} ago - #{comment.id}"
      .comment_content
        %p= markdown(comment.content)
      .comment_photos
        = render comment.photos
      .comment_actions
        = render "shared/actions", post: comment

