.comment[comment]
  = link_to comment.user, class: "pull-left" do
    = user_avatar_tag(comment.user, 30)
  .comment_body
    %h5.media-heading
      = link_to comment.user.first_name, comment.user, title: comment.created_at.strftime("%A, %B %Y  @ %l:%M %p")
      %small
        = "replied #{time_ago_in_words(comment.created_at)} ago - "
        = link_to comment, title: comment.id do
          = comment.id
          %span.glyphicon.glyphicon-link
    .comment_content
      %p= markdown(comment.content)
    .comment_photos
      = render comment.photos
    .comment_actions
      = render "shared/actions", lovable: comment

