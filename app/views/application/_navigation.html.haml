%nav.navbar.navbar-inverse.navbar-static-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: "navbar-brand" do
        %span.glyphicon.glyphicon-heart-empty
        Family
    .collapse.navbar-collapse
      - if signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li{class: active_path_class(:posts)}
            = link_to "Posts", posts_path(sort_by: "created_at")
          %li{class: active_path_class(:photos)}
            = link_to "Photos", photos_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span.glyphicon.glyphicon-cog
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to [:edit, current_user] do
                  %span.glyphicon.glyphicon-user
                  Account
              %li
                = link_to users_path do
                  %span.glyphicon.glyphicon-fire
                  Stats
              %li.divider
              %li
                = link_to sign_out_path do
                  %span.glyphicon.glyphicon-log-out
                  Sign out
      %ul.nav.navbar-nav
        = render "navigation_links"

